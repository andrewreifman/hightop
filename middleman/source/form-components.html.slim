                input#disabledInput.form-control placeholder="Disabled input" type="text"
            .form-group
              label.control-label.col-md-2 for="disabledInput" Disabled Select
              .col-md-7
                select#disabledSelect.form-control
                  option Disabled select

          .form-group
            label.control-label.col-md-2 Toggle Switch
            .col-md-7.clearfix
              .holder
                input#check.check-ios name="check" type="checkbox" value="None" checked="checked"
                label for="check"
                span
              em 
                |(works in modern browsers)

          .form-group
            label.control-label.col-md-2 Radio Buttons
            .col-md-7
              label.radio
                input name="optionsRadios1" type="radio" value="option1"
                span Option 1
              label.radio
                input checked="" name="optionsRadios1" type="radio" value="option2"
                span Option 2
              label.radio
                input name="optionsRadios1" type="radio" value="option3"
                span Option 3
              label.radio
                input name="optionsRadios1" type="radio" value="option4"
                span Option 4

          .form-group
            label.control-label.col-md-2 Radio Buttons
            .col-md-7
              label.radio-inline
                input name="optionsRadios2" type="radio" value="option1"
                span Option 1
              label.radio-inline
                input checked="" name="optionsRadios2" type="radio" value="option2"
                span Option 2
              label.radio-inline
                input name="optionsRadios2" type="radio" value="option3"
                span Option 3

          .form-group
            label.control-label.col-md-2 Checkbox
            .col-md-7
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 1
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 2
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 3
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 4

          .form-group
            label.control-label.col-md-2 Checkbox
            .col-md-7
              label.checkbox-inline
                input type="checkbox" value=""
                span Checkbox 1
              label.checkbox-inline
                input type="checkbox" value=""
                span Checkbox 2
              label.checkbox-inline
                input type="checkbox" value=""
                span Checkbox 3

          .form-group
            label.control-label.col-md-2 Textarea
            .col-md-7
              textarea.form-control rows="3"

          .form-group
            label.control-label.col-md-2 Form Actions
            .col-md-7
              button.btn.btn-primary type="submit" Submit
              button.btn.btn-default-outline Cancel            

