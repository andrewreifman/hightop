          .form-group
            label.control-label.col-md-2 Button Add-on
            .col-md-7
              .input-group
                input.form-control type="text"
                  span.input-group-btn
                    button.btn.btn-default type="button" Go

          .form-group
            label.control-label.col-md-2 Dropdown Add-on
            .col-md-7
              .input-group
                input.form-control type="text"
                  .input-group-btn
                    button.btn.btn-default.dropdown-toggle data-toggle="dropdown" type="button"
                      | Actions
                      span.caret
                    ul.dropdown-menu.pull-right
                      li
                        a href="#" Action 1
                      li
                        a href="#" Action 2
                      li
                        a href="#" Action 3


          fieldset disabled=""
