.page-title
  h1 Form Components

.row
  .col-lg-12
    .widget-container.fluid-height.clearfix
      .heading
        i.icon-adjust
        | Basic Components

      .widget-content.padded
        form.form-horizontal action="#"
          .form-group
            label.control-label.col-md-2 Input
            .col-md-7
              input.form-control placeholder="Text" type="text"
          .form-group
            label.control-label.col-md-2 Dropdown
            .col-md-7
              select.form-control
                option value="Category 1" Option 1
                option value="Category 2" Option 2
                option value="Category 3" Option 3
                option value="Category 4" Option 4
          .form-group
            label.control-label.col-md-2 Multi-Select
            .col-md-7
              select.form-control multiple=""
                option value="Category 1" Option 1
                option value="Category 2" Option 2
                option value="Category 3" Option 3
                option value="Category 4" Option 4

          .form-group
            label.control-label.col-md-2 Username Input
            .col-md-7
              .input-group
                span.input-group-addon @
                input.form-control placeholder="Username" type="text"

          .form-group
            label.control-label.col-md-2 Currency Input
            .col-md-7
              .input-group
                span.input-group-addon $
                input.form-control type="text"
                  span.input-group-addon .00


          fieldset disabled=""
            .form-group
              label.control-label.col-md-2 for="disabledInput" Disabled Input
              .col-md-7
                input#disabledInput.form-control placeholder="Disabled input" type="text"
            .form-group
              label.control-label.col-md-2 for="disabledInput" Disabled Select
              .col-md-7
                select#disabledSelect.form-control
                  option Disabled select

          .form-group
            label.control-label.col-md-2 Toggle Switch
            .col-md-7.clearfix
              .holder
                input#check.check-ios name="check" type="checkbox" value="None" checked="checked"
                label for="check"
                span
              em 
                |(works in modern browsers)

          .form-group
            label.control-label.col-md-2 Radio Buttons
            .col-md-7
              label.radio
                input name="optionsRadios1" type="radio" value="option1"
                span Option 1
              label.radio
                input checked="" name="optionsRadios1" type="radio" value="option2"
                span Option 2
              label.radio
                input name="optionsRadios1" type="radio" value="option3"
                span Option 3
              label.radio
                input name="optionsRadios1" type="radio" value="option4"
                span Option 4

          .form-group
            label.control-label.col-md-2 Radio Buttons
            .col-md-7
              label.radio-inline
                input name="optionsRadios2" type="radio" value="option1"
                span Option 1
              label.radio-inline
                input checked="" name="optionsRadios2" type="radio" value="option2"
                span Option 2
              label.radio-inline
                input name="optionsRadios2" type="radio" value="option3"
                span Option 3

          .form-group
            label.control-label.col-md-2 Checkbox
            .col-md-7
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 1
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 2
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 3
              label.checkbox
                input type="checkbox" value=""
                span Checkbox 4

          .form-group
            label.control-label.col-md-2 Checkbox
            .col-md-7
              label.checkbox-inline
                input type="checkbox" value=""
                span Checkbox 1
              label.checkbox-inline
                input type="checkbox" value=""
                span Checkbox 2
              label.checkbox-inline
                input type="checkbox" value=""
                span Checkbox 3

          .form-group
            label.control-label.col-md-2 Textarea
            .col-md-7
              textarea.form-control rows="3"

          .form-actions.col-lg-offset-2.col-md-7
            button.btn.btn-primary type="submit" Submit
            button.btn.btn-default-outline Cancel

