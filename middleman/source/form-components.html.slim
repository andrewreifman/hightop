.row
  .col-md-12
    .widget-container
      .heading
        i.icon-shield
        | File Upload

      .widget-content.padded
        form.form-horizontal action="#"
          .form-group
            label.control-label.col-md-2 Custom file upload
            .col-md-4
              .fileupload.fileupload-new data-provides="fileupload"
                .input-group
                  .form-control
                    i.icon-file.fileupload-exists
                    span.fileupload-preview
                  .input-group-btn
                    a.btn.btn-default.fileupload-exists data-dismiss="fileupload" href="#" Remove
                    span.btn.btn-default.btn-file
                      span.fileupload-new Select file
                      span.fileupload-exists Change
                      input type="file"

          .form-group
            label.control-label.col-md-2 Without input
            .col-md-4
              .fileupload.fileupload-new data-provides="fileupload"
                span.btn.btn-default.btn-file
                  span.fileupload-new Select file
                  span.fileupload-exists Change
                  input type="file"
                span.fileupload-preview
                button.close.fileupload-exists data-dismiss="fileupload" style="float:none" type="button" &times;

          .form-group
            label.control-label.col-md-2 With preview
            .col-md-4
              .fileupload.fileupload-new data-provides="fileupload"
                .fileupload-new.img-thumbnail style="width: 200px; height: 150px;"
                  img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image"
                .fileupload-preview.fileupload-exists.img-thumbnail style="width: 200px; max-height: 150px"
                div
                  span.btn.btn-default.btn-file
                    span.fileupload-new Select image
                    span.fileupload-exists Change
                    input type="file"
                  a.btn.btn-default.fileupload-exists data-dismiss="fileupload" href="#" Remove


