doctype html
html
  head
    title se7en - Dashboard
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:100,300,400,700", media: "all"

    = stylesheet_link_tag "bootstrap.min", media: "all"
    = stylesheet_link_tag "font-awesome.min", media: "all"
    = stylesheet_link_tag "se7en-font", media: "all"
    = stylesheet_link_tag "style", media: "all"
    / = stylesheet_link_tag "application", media: "all"

    = javascript_include_tag "http://code.jquery.com/jquery-1.10.2.min.js"
    = javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.js"
    = javascript_include_tag "bootstrap.min"
    = javascript_include_tag "modernizr.custom"
    = javascript_include_tag "main"
    / = javascript_include_tag "application"

    meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport"

  body.login2

    <!-- Login Screen -->
    .login-wrapper
      h1= link_to "HIGHTOP", 'index.html'
      form action="index.html"
        .form-group
          .input-group
            span.input-group-addon
              i.fa.fa-envelope
            input.form-control placeholder="Username or Email" type="text"
        .form-group
          .input-group
            span.input-group-addon
              i.fa.fa-lock
            input.form-control placeholder="Password" type="text"

        = link_to "Forgot password?", "#", class: "pull-right"
        .text-left
          label.checkbox
            input type="checkbox"
            span Keep me logged in

        input.btn.btn-lg.btn-primary.btn-block type="submit" value="Log in"

        .social-login.clearfix
          a.btn.btn-primary.pull-left.facebook href="index.html"
            i.fa.fa-facebook
            | Login with facebook
          a.btn.btn-primary.pull-right.twitter href="index.html"
            i.fa.fa-twitter
            | Login with twitter

      p Don't have an account yet?
      a.btn.btn-default-outline.btn-block href="signup2.html" Sign up now


    <!-- End Login Screen -->