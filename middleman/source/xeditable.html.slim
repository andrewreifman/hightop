.page-title
  h1 X-Editable Forms

.row
  .col-lg-12
    .widget-container.fluid-height.clearfix
      .widget-content.padded
        form#frm.form-horizontal action="xeditable.html" method="get"
          .form-group
            label.control-label.pull-left style="text-align:left; margin-right:15px" Mode
            select#c.form-control.pull-left name="c" style="width:150px; margin-right:8px;"
              option value="popup" Popup
              option value="inline" Inline
            button.btn.btn-primary type="submit" Refresh

        p Click to edit
        table#user.table.table-bordered.table-striped style="clear: both"
          tbody
            tr
              td width="35%" Simple text field
