.page-title
  h1 Gallery

.row
	.col-lg-12
		.widget-container.fluid-height
			.heading 
				i.icon-signal 
				| Gallery with Captions
			
			.widget-content.padded
				ul.gallery-grid.clearfix
				  li
				    figure
				    	= image_tag "/assets/caption-image.png"
			        figcaption
			          h3 Camera
			          span by Jacob Cummings
				  li
				    figure
				    	= image_tag "/assets/caption-image.png"
			        figcaption
			          h3 Camera
			          span by Jacob Cummings
				  li
				    figure
				    	= image_tag "/assets/caption-image.png"
			        figcaption
			          h3 Camera
			          span by Jacob Cummings
				  li
				    figure
				    	= image_tag "/assets/caption-image.png"
			        figcaption
			          h3 Camera
			          span by Jacob Cummings

.row
	.col-lg-6
		.widget-container.fluid-height
			.heading 
				i.icon-signal 
				| Sorting and Filtering
				.gallery-filters.list-inline.btn-group.pull-right
					a.btn.btn-mini.btn-primary-outline.selected data-filter="*" href="#" All
					a.btn.btn-mini.btn-primary-outline data-filter=".filter1" href="#" Filter 1
					a.btn.btn-mini.btn-primary-outline data-filter=".filter2" href="#" Filter 2
			
			.widget-content.padded
				.gallery-container
				  a.gallery-item.filter1.fancybox href="#"
				  	= image_tag "/assets/image-iso.png"
				  a.gallery-item.filter1 href="#"
				  	= image_tag "/assets/image-iso2.jpg"
				  a.gallery-item.filter2 href="#"
				  	= image_tag "/assets/image-iso3.png"	
				  a.gallery-item.filter1 href="#"
				  	= image_tag "/assets/image-iso.png"	
				  a.gallery-item.filter2 href="#"
				  	= image_tag "/assets/image-iso2.jpg"	
				  a.gallery-item.filter2 href="#"
				  	= image_tag "/assets/image-iso.png"	

	.col-lg-6
		.widget-container
			.heading 
				i.icon-signal 
				| Carousel

			.widget-content.padded
				#carousel-example-generic.carousel.slide
				  ol.carousel-indicators
				    li.active data-slide-to="0" data-target="#carousel-example-generic"
				    li data-slide-to="1" data-target="#carousel-example-generic"
				    li data-slide-to="2" data-target="#carousel-example-generic"
				  
				  .carousel-inner
				    .item.active
				      = image_tag "/assets/image5.png"
				    .item
				      = image_tag "/assets/image6.png"
				    .item
				      = image_tag "/assets/image7.png"
				  
				  a.left.carousel-control data-slide="prev" href="#carousel-example-generic"
				    span.icon-angle-left
				  a.right.carousel-control data-slide="next" href="#carousel-example-generic"
				    span.icon-angle-right

