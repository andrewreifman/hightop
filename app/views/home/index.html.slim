<!-- Login Screen -->
.login
  .login-container
    = image_tag "logo-login@2x.png", :size => "100x30"
    form
      .form-group
        .input-group
          span.input-group-addon
            i.icon-envelope
          input.form-control placeholder="Email" type="text"
      .form-group
        .input-group
          span.input-group-addon
            i.icon-lock
          input.form-control placeholder="Password" type="password"
      .form-group
        label.checkbox
          input type="checkbox"
          | Remember me
      .btn.btn-lg.btn-primary.login-submit Log in
      
    = link_to "Forgot password?", "#"
	<!-- End Login Screen -->


