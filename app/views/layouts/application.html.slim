doctype
html
  head
    title se7en
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lato:100,300,400,700", media: "all"
    = stylesheet_link_tag "application", media: "all"

    = stylesheet_link_tag "color/green", media: "all", rel: "alternate stylesheet", title: "green-theme"
    = stylesheet_link_tag "color/orange", media: "all", rel: "alternate stylesheet", title: "orange-theme"
    = stylesheet_link_tag "color/magenta", media: "all", rel: "alternate stylesheet", title: "magenta-theme"
    = stylesheet_link_tag "color/gray", media: "all", rel: "alternate stylesheet", title: "gray-theme"

    = javascript_include_tag "application"
    = javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0-wip/js/bootstrap.min.js"
    = csrf_meta_tags
    meta content="width=device-width, initial-scale=1.0" name="viewport"

  body
    - if current_page?(root_path)
      .login
        .login-container
          = image_tag "logo-login@2x.png", :size => "100x30"

          form
            .form-group
              .input-group
                span.input-group-addon
                  i.icon-envelope
                input.form-control placeholder="Email" type="text"
            .form-group
              .input-group
                span.input-group-addon
                  i.icon-key
                input.form-control placeholder="Password" type="password"
            .form-group
              label.checkbox
                input type="checkbox"
                | Remember me
            .btn.btn-lg.btn-primary.login-submit Log in
            
          = link_to "Forgot password?", "#"

    .navbar.navbar-fixed-top
      .container-fluid.top-bar
        button.navbar-toggle data-target=".nav-collapse" data-toggle="collapse" type="button"
          span.icon-bar
          span.icon-bar
          span.icon-bar

        .pull-right
          ul.nav.navbar-nav.pull-right
            li.dropdown.notifications.hidden-phone
              a.dropdown-toggle data-toggle="dropdown" href="#"
                span Notifications
                p.counter 4
              ul.dropdown-menu
                li= link_to 
                  i.icon-user 
                  | New user added: Jane Smith
                li= link_to 
                  i.icon-dashboard 
                  | Sales targets available
                li= link_to 
                  i.icon-pencil
                  | New performance metric added
                li= link_to 
                  i.icon-dashboard 
                  | New growth data available  
                  span.label.label-default 1 day ago
            li.dropdown.messages.hidden-phone
              a.dropdown-toggle data-toggle="dropdown" href="#"
                span Messages
                p.counter 3
              ul.dropdown-menu
                li= link_to "Item 1"
                li= link_to "Item 2"
                li= link_to "Item 3"
            li.dropdown.settings.hidden-phone
              a.dropdown-toggle data-toggle="dropdown" href="#"
                span Settings
              ul.dropdown-menu
                li
                  a.settings-link.blue href="javascript:chooseStyle('none', 30)"
                    span
                    | Blue
                li
                  a.settings-link.green href="javascript:chooseStyle('green-theme', 30)"
                    span
                    | Green
                li
                  a.settings-link.orange href="javascript:chooseStyle('orange-theme', 30)"
                    span
                    | Orange
                li
                  a.settings-link.magenta href="javascript:chooseStyle('magenta-theme', 30)"
                    span
                    | Magenta
                li
                  a.settings-link.gray href="javascript:chooseStyle('gray-theme', 30)"
                    span
                    | Gray
            li.dropdown.user
              = link_to "#", "data-toggle" => "dropdown", class: "dropdown-toggle" do
                = image_tag "avatar-male.jpg", :size => "34x34"
                | John Smith
                b.caret
              ul.dropdown-menu
                li
                  = link_to "#" do
                    i.icon-user
                    | My Account
                li
                  = link_to "#" do
                    i.icon-gear
                    | Account Settings
                li
                  = link_to login_path do
                    i.icon-signout
                    | Logout

        = link_to "se7en", root_path, class: 'logo'
        form.navbar-form.form-inline.col-lg-2
          input.form-control placeholder="Search" type="text"


      .container-fluid.main-nav.clearfix
        .nav-collapse
          ul.nav
            li.dashboard
              = link_to root_path, class: cp(root_path) do
                span
                | Dashboard
            li.dropdown.ui
              = link_to "#", "data-toggle" => "dropdown", class: "dropdown-toggle" && cp(ui_path) do
                span
                | UI
                b.caret
              ul.dropdown-menu
                li= link_to "Buttons", buttons_path
                li= link_to "Icons", icons_path
                li= link_to "Components", components_path
                li= link_to "Widgets", widgets_path
                li= link_to "Typography", typo_path
                li= link_to "Grid Layout", grid_path
            li.forms
              = link_to forms_path, class: cp(forms_path) do
                span
                | Forms
            li.tables
              = link_to tables_path, class: cp(tables_path) do
                span
                | Tables
            li.charts
              = link_to charts_path, class: cp(charts_path) do
                span
                | Charts
            li.gallery
              = link_to gallery_path, class: cp(gallery_path) do
                span
                | Gallery

    .container-fluid
      = yield